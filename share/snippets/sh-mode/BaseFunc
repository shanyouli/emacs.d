# ------------------ base function ------------------------------------------- #
_is_callabled() {
    for cmd in "$@" ; do
        command -v $cmd >/dev/null || return 1
    done
}
_msg()   { print -P "%F{green}%B[ .. ] $* %f%b"; }
_error() { print -P "$F{red}%B%U[ ER ] $* %f%b%u"; }
# ------------------ base function ------------------------------------------- #

$0